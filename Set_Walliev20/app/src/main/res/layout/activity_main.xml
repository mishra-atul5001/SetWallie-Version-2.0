<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:layout_margin="15dp"
    android:elevation="45dp"
    android:background="@color/Lavender"
    tools:context="com.example.mishr.set_walliev20.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Wallie World..!!"
        android:textStyle="bold"
        android:textColor="@color/Brown"
        android:textAlignment="center"
        android:id="@+id/welcome_view"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_view"
        android:layout_margin="23dp"
        android:text="Please Login to Continue..!!"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textColor="@color/Brown"
        android:textStyle="italic|bold"
        android:id="@+id/login_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_view"
        android:orientation="vertical"
        android:elevation="25dp"
        android:id="@+id/linear_layout_login">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Username here..!!"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="23dp"
            android:id="@+id/username_editText"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/password_editText"
            android:textAlignment="center"
            android:hint="Password here..!!"
            />
    </LinearLayout>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Login..!!"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Brown"
        android:textSize="19sp"
        android:id="@+id/login_button"
        android:elevation="15dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:text="Cancel..!!"
        android:textAllCaps="false"
        android:elevation="12dp"
        android:textSize="17sp"
        android:textColor="@color/Brown"
        android:textStyle="italic"
        android:layout_margin="15dp"/>

</RelativeLayout>
