<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical"
    tools:context="com.example.mishr.set_walliev20.CameraActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:background="@drawable/unnamed_image"
        android:layout_marginLeft="40dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:elevation="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Beige"
        android:elevation="15dp"
        android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="11dp"
            android:id="@+id/open_camera"
            android:layout_marginLeft="75dp"
            android:elevation="35dp"
            android:background="@drawable/ic_camera_alt_black_24dp"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/set_wallpaper"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="55dp"
            android:textAllCaps="false"
            android:elevation="35dp"
            android:background="@drawable/ic_wallpaper_black_24dp"
           />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click these buttons to perform your Actions..!!"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Brown"
        android:layout_margin="15dp"/>


</LinearLayout>
